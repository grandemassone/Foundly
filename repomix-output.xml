  <link rel="stylesheet" href="${pageContext.request.contextPath}/css/login.css">

  <style>
    .info-section {
      background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
    }

    /* Stile footer form come nello screenshot */
