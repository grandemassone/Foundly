/* /css/segnalazioni_e_reclami.css */

:root {
    --primary-orange: #FB8C00;
    --primary-orange-soft: #FFE7CF;
    --primary-dark: #E65100;
    --bg-page: #F5F6FB;
    --bg-card: #FFFFFF;
    --text-main: #202124;
    --text-muted: #5F6368;
    --border-soft: #E0E3EB;
    --shadow-soft: 0 8px 24px rgba(0, 0, 0, 0.06);
    --radius-lg: 20px;
    --radius-pill: 999px;
}

/* RESET BASICO */

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Roboto', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    background-color: var(--bg-page);
    color: var(--text-main);
}

/* LAYOUT GENERALE */

.page-wrapper {
    max-width: 1100px;
    margin: 0 auto;
    padding: 96px 24px 40px; /* spazio per navbar fissa */
}

.page-header {
    margin-bottom: 24px;
}

.page-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 6px;
}

.page-subtitle {
    font-size: 0.95rem;
    color: var(--text-muted);
}

/* TABS */

.tabs {
    display: inline-flex;
    background: #FFFFFF;
    border-radius: var(--radius-pill);
    padding: 4px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    margin: 20px 0 24px;
}

.tab-button {
    border: none;
    background: transparent;
    padding: 8px 18px;
    border-radius: var(--radius-pill);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-muted);
    display: flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
    transition: background 0.2s ease, color 0.2s ease, transform 0.1s ease;
}

.tab-button .tab-icon {
    font-size: 18px;
}

.tab-button:hover {
    background: #F1F3F8;
}

.tab-button.active {
    background: var(--primary-orange-soft);
    color: var(--primary-dark);
    transform: translateY(-1px);
}

/* SEZIONE */

.section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    margin-bottom: 10px;
}

.section-header h2 {
    font-size: 1.2rem;
    font-weight: 600;
}

/* TAB CONTENT */

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
}

/* CARDS GRID */

.cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 20px;
    margin-top: 14px;
}

/* CARD */

.card {
    position: relative;
    background-color: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 22px 20px 18px;
    box-shadow: var(--shadow-soft);
    border: 1px solid var(--border-soft);
    transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease;
}

.card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
    border-color: rgba(251, 140, 0, 0.6);
}

.card-title {
    font-size: 1.05rem;
    font-weight: 600;
    margin-bottom: 8px;
    padding-right: 80px; /* spazio per il badge */
}

.card-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.9rem;
    color: var(--text-muted);
}

.card-meta-icon {
    font-size: 18px;
}

.dot-separator {
    margin: 0 4px;
}

/* FOOTER CARD */

.card-footer {
    margin-top: 18px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

/* BADGES */

.card-badges {
    position: absolute;
    top: 14px;
    right: 16px;
}

.badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 4px 10px;
    border-radius: var(--radius-pill);
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    white-space: nowrap;
}

.badge-chiusa {
    background: #E0F5E9;
    color: #1B8E3E;
}

.badge-aperta {
    background: #FFF4E0;
    color: #C97800;
}

.badge-default {
    background: #E3E6ED;
    color: #414854;
}

/* BUTTONS */

.btn-primary,
.btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: var(--radius-pill);
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    border: 1px solid transparent;
    transition: background 0.2s ease, color 0.2s ease, box-shadow 0.2s ease, transform 0.1s ease, border 0.2s ease;
}

.btn-primary {
    background: var(--primary-orange);
    color: #FFFFFF;
    box-shadow: 0 4px 10px rgba(251, 140, 0, 0.4);
    border-color: var(--primary-dark);
}

.btn-primary:hover {
    background: var(--primary-dark);
    box-shadow: 0 6px 16px rgba(230, 81, 0, 0.55);
    transform: translateY(-1px);
}

.btn-secondary {
    background: #FFFFFF;
    color: var(--primary-dark);
    border-color: rgba(251, 140, 0, 0.4);
}

.btn-secondary:hover {
    background: var(--primary-orange-soft);
    border-color: var(--primary-dark);
}

/* EMPTY STATE */

.empty-state {
    margin-top: 24px;
    padding: 32px 24px;
    background: #FFFFFF;
    border-radius: var(--radius-lg);
    border: 1px dashed var(--border-soft);
    text-align: center;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.03);
}

.empty-state h3 {
    font-size: 1.1rem;
    margin-bottom: 6px;
}

.empty-state p {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 14px;
}

.empty-icon {
    font-size: 40px;
    color: var(--primary-dark);
    margin-bottom: 6px;
}

/* RESPONSIVE */

@media (max-width: 768px) {
    .page-wrapper {
        padding: 84px 16px 32px;
    }

    .section-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .section-header a {
        width: 100%;
        justify-content: center;
    }

    .tabs {
        width: 100%;
        justify-content: space-between;
    }

    .cards-grid {
        grid-template-columns: 1fr;
    }
}
